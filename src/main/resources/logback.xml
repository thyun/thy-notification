	<root level="info">
<!-- 		<appender-ref ref="FILE" /> -->
		<appender-ref ref="STDOUT" />
	</root>
	
	<logger name="com.thy" level="debug" additivity="false">
<!-- 		<appender-ref ref="FILE" /> -->
		<appender-ref ref="STDOUT" />
	</logger>
	
	<logger name="org.springframework" level="debug" additivity="false">
<!-- 		<appender-ref ref="FILE" /> -->
		<appender-ref ref="STDOUT" />
	</logger>

</configuration>