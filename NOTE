# API
Request:
{
    "id": "send-0001",
    "title": "제목",
    "message": "[ON] SMONi-ap-dev03 [Memory used] 6685151232 > 15 [1 MIN PMon #56]",
    "phones": [ "01039084148", "0264074148" ],
    "emails": [ "th.yun@sk.com" ],
    "slack": [
        { "url": "https://hooks.slack.com/services/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" }
    ],
    "webhook": [ ]
}

Response:
{
    "id": "send-0001",
    "result": true,
    "error": "",
    "phone": [
        {
            "id": "send-0001",
            "result": true
        }
    ],
    "email": [
        {
            "id": "send-0001",
            "result": true
        }
    ],
    "slack": [
        {
            "id": "send-0001",
            "result": true
        }
    ],
    "webhook": [
        {
            "id": "send-0001",
            "result": true
        }
    ]
}

